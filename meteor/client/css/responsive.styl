@import 'util.styl'

largeHeaderSize = 2.618*bodyFontSize
titleSize = 4.236*bodyFontSize

/* Large desktop */
@media (min-width: 1200px)
  .container
    width 800px

/* Portrait tablet to landscape and desktop */
@media (min-width: 768px) and (max-width: 979px)
  .container
    width auto
    padding 100px
    padding 100px
 
/* Landscape phone to portrait tablet */
@media (max-width: 767px)
  .container
    width auto
    padding bodyFontSize*2
    padding bodyFontSize*2
  .dark
    line-height goldenRatio*1em !important
  h1
    font-size largeHeaderSize !important
  h2
    font-size largeHeaderSize !important

  .what
    background-image none

  .decor
    position relative
    &#matt, &#jing
      width 100%
      height 200px
      margin-left auto
      margin-right auto

      display table
      clear both
      .image
        display table-cell
        width 150px
        height 100%
        background-position top center
      .caption
        height 100%
        width auto
        display table-cell
        vertical-align middle
        text-align left
        margin-left tinyFontSize

    &#matt
      bottom inherit
      margin-left auto
      margin-right auto
      margin-top mediumHeaderSize * 1px

    &#jing
      margin-bottom largeHeaderSize * -1px

