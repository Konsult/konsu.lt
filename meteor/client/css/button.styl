@import 'nib'

buttonRadius = 5px
buttonColor = rgb(30, 149, 230)
buttonHoverColor = lighten(buttonColor, 10%)
buttonActiveColor = darken(buttonColor, 10%)
buttonTransitionDuration = 0.25s

.button
  padding 0.9em 1em 0.9em 1em
  box-sizing border-box

  line-height 1.2em
  color white
  text-shadow 0 -1px darken(buttonColor, 50%)

  border-radius buttonRadius
  border 1px solid darken(buttonColor, 15%)
  border-bottom-color darken(buttonColor, 30%)
  box-shadow inset 0 1px 0 lighten(buttonColor, 25%)

  background-color buttonColor

  transition-property background-color, box-shadow, border-color
  transition-duration 0.25s
  transition-timing-function ease-in-out

  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-user-select none

  &:hover
    background-color buttonHoverColor
    box-shadow inset 0 1px 0 lighten(buttonHoverColor, 25%)
    border-color darken(buttonHoverColor, 15%)
    border-bottom-color darken(buttonHoverColor, 30%)

  &:active, &.active
    background-color buttonActiveColor
    box-shadow inset 0 1px 0 transparent
    border-color darken(buttonActiveColor, 15%)
    border-top-color darken(buttonActiveColor, 30%)
    border-bottom-color darken(buttonActiveColor, 5%)

    transition-duration 0s
